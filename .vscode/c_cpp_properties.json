{
  "configurations": [
    {
      "name": "Linux",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/external/glad/include",
        "/usr/include",
        "/usr/local/include",
        "/usr/include/glm",
        "/usr/include/GLFW"
      ],
      "defines": [],
      "compilerPath": "/usr/bin/g++",
      "cStandard": "c17",
      "cppStandard": "c++20",
      "intelliSenseMode": "linux-gcc-x64",
      "browse": {
        "path": [
          "${workspaceFolder}/**",
          "${workspaceFolder}/external/glad/include"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    },
    {
      "name": "Mac",
      "includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/external/glad/include",
        "/usr/local/include",
        "/usr/include",
        "/opt/homebrew/include",
        "/opt/homebrew/include/glm",
        "/opt/homebrew/include/GLFW",
        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include" 
      ],
      "defines": [],
      "compilerPath": "/usr/bin/clang++",
      "cStandard": "c17",
      "cppStandard": "c++20",
      "intelliSenseMode": "macos-clang-x64",
      "browse": {
        "path": [
          "${workspaceFolder}/**",
          "${workspaceFolder}/external/glad/include"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}